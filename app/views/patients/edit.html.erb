<div id="page_wrapper">


<%= form_for @patient do |f| %>
    <% if @patient.errors.any? %>
          <ul>
            <% @patient.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
    <% end %>


      <%= f.label :name %><br>
      <%= f.text_field :name %>

    <p>
      <%= f.label :surname %><br>
      <%= f.text_field :surname %>
    </p>

        <p>
          Personal Code (can not be changed)
          <%= f.text_field :personalCode, :readonly => true %>
        </p>

      <p>
        Telephone Number<br>
        <%= f.text_field :telephoneNr %>
      </p>

      <p>
        E-mail address<br>
        <%= f.text_field :second_email %>
      </p>
      <p>
        Address<br>
        <%= f.text_area :address %>
      </p>


    <p>
      <%= f.submit 'Save Changes'%>
    </p>



<% end %>

</div>